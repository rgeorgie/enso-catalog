[Unit]
Description=Enso Karate Catalog Flask Application
After=network.target

[Service]
Type=simple
User=@INSTALL_USER@
WorkingDirectory=@INSTALL_DIR@
Environment=PATH=@INSTALL_DIR@/.venv/bin
ExecStart=@INSTALL_DIR@/.venv/bin/gunicorn --bind 0.0.0.0:5000 --workers 1 app:app
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target