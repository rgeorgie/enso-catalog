[Unit]
Description=Enso Karate Catalog Flask Application
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/enso-catalog
Environment=PATH=/home/pi/enso-catalog/.venv/bin
ExecStart=/home/pi/enso-catalog/.venv/bin/gunicorn --bind 0.0.0.0:5000 --workers 1 app:app
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target